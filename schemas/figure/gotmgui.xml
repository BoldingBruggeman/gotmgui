<?xml version="1.0"?>
<element id="Figure" label="figure">

	<template id="Line2D">
		<element id="CanHaveMarker" type="bool" hidden="True"/>
		<element id="LineStyle" type="select" label="line style">
			<options>
				<option label="none"     value="0"/>
				<option label="solid"    value="1"/>
				<option label="dashed"   value="2"/>
				<option label="dash-dot" value="3"/>
				<option label="dotted"   value="4"/>
			</options>
		</element>
		<element id="LineWidth" type="float" label="line width" unit="pt">
			<condition type="ne" variable="./LineStyle" value="0"/>
		</element>
		<element id="Color" type="color" label="line color">
			<condition type="or">
				<condition type="ne" variable="./LineStyle"  value="0"/>
				<condition type="eq" variable="./MarkerType" value="2"/>
				<condition type="eq" variable="./MarkerType" value="4"/>
				<condition type="eq" variable="./MarkerType" value="5"/>
			</condition>
		</element>
		<element id="MarkerType" type="select" label="marker type">
			<condition type="eq" variable="./CanHaveMarker" value="True"/>
			<options>
				<option label="none"     value="0"/>
				<option label="points"   value="1"/>
				<option label="pixels"   value="2"/>
				<option label="circle"   value="3"/>
				<option label="triangle" value="4"/>
				<option label="square"   value="5"/>
				<option label="plus"     value="6"/>
				<option label="cross"    value="7"/>
				<option label="diamond"  value="8"/>
			</options>
		</element>
		<element id="MarkerSize" type="float" label="marker size" unit="pt">
			<condition type="and">
				<condition type="eq" variable="./CanHaveMarker"  value="True"/>
				<condition type="ne" variable="./MarkerType"     value="0"/>
				<condition type="ne" variable="./MarkerType"     value="2"/>
			</condition>
		</element>
		<element id="MarkerFaceColor" type="color" label="marker color">
			<condition type="and">
				<condition type="eq" variable="./CanHaveMarker"  value="True"/>
				<condition type="ne" variable="./MarkerType"     value="0"/>
				<condition type="ne" variable="./MarkerType"     value="2"/>
				<condition type="ne" variable="./MarkerType"     value="4"/>
				<condition type="ne" variable="./MarkerType"     value="5"/>
			</condition>
		</element>
	</template>

	<element id="Name" type="string" label="name" hidden="True"/>
	<element id="Title" type="string" label="title"/>
	<element id="FontName" type="fontname" label="font"/>
	<element id="FontScaling" type="float" label="font scaling" unit="%"/>

	<element id="Grid" type="bool" label="grid">
		<link template="Line2D" id="LineProperties" grouponly="True">
			<condition type="eq" variable="." value="True"/>
		</link>
	</element>

	<element id="Axes" label="axes">
		<element id="Axis" label="axis" maxoccurs="10">
			<element id="Label"       type="string" label="label"/>
			<element id="IsTimeAxis"  type="bool" hidden="True"/>
			<element id="MinimumTime" type="datetime" label="minimum" nodefault="True">
				<condition type="eq" variable="./IsTimeAxis" value="True"/>
			</element>
			<element id="MaximumTime" type="datetime" label="maximum" nodefault="True">
				<condition type="eq" variable="./IsTimeAxis" value="True"/>
			</element>
			<element id="TickLocationTime" type="select" label="tick location">
				<condition type="eq" variable="./IsTimeAxis" value="True"/>
				<options>
					<option value="0" label="year"/>
					<option value="1" label="month"/>
					<option value="2" label="day"/>
					<option value="3" label="hour"/>
					<option value="4" label="minute"/>
				</options>
			</element>
			<element id="TickIntervalTime" type="int" label="tick interval" minimum="1">
				<condition type="eq" variable="./IsTimeAxis" value="True"/>
			</element>
			<element id="TickFormatTime" type="select" label="tick format">
				<condition type="eq" variable="./IsTimeAxis" value="True"/>
				<options>
					<option value="0" label="dd-mmm-yyyy HH:MM:SS"/>
					<option value="1" label="dd-mmm-yyyy"/>
					<option value="2" label="mm/dd/yy"/>
					<option value="3" label="mmm"/>
					<option value="4" label="m"/>
					<option value="5" label="mm"/>
					<option value="6" label="mm/dd"/>
					<option value="7" label="dd"/>
					<option value="8" label="ddd"/>
					<option value="9" label="d"/>
					<option value="10" label="yyyy"/>
					<option value="11" label="yy"/>
					<option value="12" label="mmmyy"/>
					<option value="13" label="HH:MM:SS"/>
					<option value="14" label="HH:MM:SS PM"/>
					<option value="15" label="HH:MM"/>
					<option value="16" label="HH:MM PM"/>
					<option value="17" label="QQ-YY"/>
					<option value="18" label="QQ"/>
					<option value="19" label="dd/mm"/>
					<option value="20" label="dd/mm/yy"/>
					<option value="21" label="mmm.dd,yyyy HH:MM:SS"/>
					<option value="22" label="mmm.dd,yyyy"/>
					<option value="23" label="mm/dd/yyyy"/>
					<option value="24" label="dd/mm/yyyy"/>
					<option value="25" label="yy/mm/dd"/>
					<option value="26" label="yyyy/mm/dd"/>
					<option value="27" label="QQ-YYYY"/>
					<option value="28" label="mmmyyyy"/>
				</options>
			</element>
			<element id="Minimum" type="float" label="minimum" unit="[Unit]" nodefault="True">
				<condition type="ne" variable="./IsTimeAxis" value="True"/>
			</element>
			<element id="Maximum" type="float" label="maximum" unit="[Unit]" nodefault="True">
				<condition type="ne" variable="./IsTimeAxis" value="True"/>
			</element>
			<element id="Unit" type="string" label="unit" nodefault="True" hidden="True"/>
		</element>
	</element>

	<element id="Data" label="data series">
		<element id="Series" label="series" maxoccurs="10">
			<element id="DimensionCount" type="int"    label="dimensions"  hidden="True"/>
			<element id="LogScale"       type="bool"   label="log-scale"/>
			<link template="Line2D" id="LineProperties" grouponly="True">
				<condition type="eq" variable="./DimensionCount" value="1"/>
			</link>

			<element id="HasConfidenceLimits" type="bool" hidden="True"/>
			<element id="ConfidenceLimits" label="confidence limits">
				<condition type="eq" variable="./HasConfidenceLimits" value="True"/>
				<element id="Style" type="select" label="style">
					<options>
						<option label="none"        value="0"/>
						<option label="error bars"  value="1"/>
						<option label="shaded area" value="2"/>
					</options>
				</element>
			</element>
			
			<element id="PlotType3D" type="select" label="plot type">
				<condition type="eq" variable="./DimensionCount" value="2"/>
				<options>
					<option label="grid"            value="0"/>
					<option label="filled contours" value="1"/>
				</options>
			</element>
			<element id="ContourCount" type="int" label="number of contours">
				<condition type="and">
					<condition type="eq" variable="./DimensionCount" value="2"/>
					<condition type="eq" variable="./PlotType3D"     value="1"/>
				</condition>
			</element>
		</element>
	</element>
		
</element>
